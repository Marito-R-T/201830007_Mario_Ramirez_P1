<!DOCTYPE html>
<html lang="en">
  <head>
    <% include reuso/head.html %>
    <title>Analizador></title>
    <script src="/listado.js" id="script"></script>
  </head>
  <body class="bg-dark text-white">
      <input class="invisible" type="text" id="tipo" value="<%=JSON.tipo%>">
      <input class="invisible" type="text" id="palabra" value="<%=JSON.palabra%>">
      <input class="invisible" type="text" id="txtregreso" value="<%=JSON.palabra%>">
    <% include reuso/scripts.html %>
    <br />
    <div class="container-fluid">
      <input type="hidden"  id="tipo">
      <input type="hidden" id="palabra">>
      <input type="hidden" id="numero">>
      <div class="form-row">
        <div class="form-group col-md-2">
          <a class="btn btn-outline-warning" href="/">Regresar</a>
        </div>
        <div class="form-group col-md-10">
          <a href="/automata/siguiente"
            class="btn btn-outline-warning btn-lg btn-block"
            id="siguiente"
            ><%- JSON.palabra %></a
          >
        </div>
      </div>
      <br />
      <div class="form-row">
        <div class="form-group col-md-2" id="listareservada">
          <h2 class="badge badge-primary text-wrap">Reservadas</h2>
          <%if(JSON.tipo=='reservada'){%>
            <h3 class="text-warning font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listabooleano">
          <h2 class="badge badge-primary text-wrap">Booleanos</h2>
          <%if(JSON.tipo=='boolean'){%>
            <h3 class="text-warning font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listaoperador">
          <h2 class="badge badge-primary text-wrap">Operador</h2>
          <%if(JSON.tipo=='operador'){%>
            <h3 class="text-warning font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listaagrupacion">
          <h2 class="badge badge-primary text-wrap">Agrupacion</h2>
          <%if(JSON.tipo=='agrupacion'){%>
            <h3 class="text-warning font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listasigno">
          <h2 class="badge badge-primary text-wrap">Signos</h2>
          <%if(JSON.tipo=='signo'){%>
            <h3 class="text-warning font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listaentero">
          <h2 class="badge badge-primary text-wrap">Enteros</h2>
          <%if(JSON.tipo=='entero'){%>
            <h3 class="text-info font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listaflotante">
          <h2 class="badge badge-primary text-wrap">Flotante</h2>
          <%if(JSON.tipo=='flotante'){%>
            <h3 class="text-info font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listaid">
          <h2 class="badge badge-primary text-wrap">ID</h2>
          <%if(JSON.tipo=='id'){%>
            <h3 class="text-info font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
        <div class="form-group col-md-2" id="listaerror">
          <h2 class="badge badge-primary text-wrap">Error</h2>
          <%if(JSON.tipo=='error'){%>
            <h3 class="text-danger font-italic"><%=JSON.palabra%></h3>
            <%}%>
        </div>
      </div>
    </div>
    <footer>
        <% include reuso/footer.html %>
    </footer>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/axios.js"></script>

  </body>
</html>
